---
import Layout from "../layouts/Layout.astro";
import ServiceCard from "../components/ServiceCard.astro";
import {
  Zap,
  Wrench,
  Building2,
  Hammer,
  Paintbrush,
  Lightbulb,
  Shield,
  CheckCircle2,
} from "lucide-react";
import ProjectGallery from "../components/ProjectGallery.jsx";
import ProjectCalculator from "../components/ProjectCalculator.jsx";

// Assets
import heroBg from "../assets/images/Construction6.jpg";
import whyUsImage from "../assets/images/CoffeRemodeling.jpg";

// Project Images
import project1 from "../assets/images/CityConstruction.jpg";
import project2 from "../assets/images/CityConstruction2.jpg";
import project3 from "../assets/images/ConstructionFloor.jpg";
import project4 from "../assets/images/WheelLoaderConstructionMachine.jpg";
import project5 from "../assets/images/Construction2.jpg";
import project6 from "../assets/images/Construction3.jpg";

const projects = [
  {
    id: 1,
    image: project1.src,
    title: "Complejo Industrial Norte",
    description:
      "Ejecución integral de instalaciones eléctricas de media tensión para nave industrial de 5,000 m². El proyecto incluyó la instalación de subestación propia, tableros de distribución certificados y sistema de iluminación LED de alta eficiencia.",
    category: "Instalación Eléctrica",
  },
  {
    id: 2,
    image: project2.src,
    title: "Torre Corporativa Reforma",
    description:
      "Remodelación estructural y acabados de lujo para oficinas corporativas en planta alta. Se utilizaron sistemas de drywall acústico de última generación para garantizar la privacidad entre salas de juntas.",
    category: "Remodelación",
  },
  {
    id: 3,
    image: project3.src,
    title: "Infraestructura Subterránea",
    description:
      "Mantenimiento mayor y modernización de túneles de servicio y canalizaciones eléctricas subterráneas. Este proyecto crítico requirió ingeniería especializada para el reemplazo de cableado de potencia.",
    category: "Mantenimiento",
  },
  {
    id: 4,
    image: project4.src,
    title: "Centro Logístico Bajío",
    description:
      "Construcción de obra civil para patio de maniobras y almacén logístico. Se ejecutaron trabajos de nivelación, cimentación reforzada y losas de concreto de alta resistencia para tráfico pesado.",
    category: "Obra Civil",
  },
  {
    id: 5,
    image: project5.src,
    title: "Planta de Manufactura",
    description:
      "Instalación de líneas de producción y sistemas de fuerza para maquinaria pesada. Nuestro equipo técnico colaboró estrechamente con los ingenieros de planta para realizar las conexiones.",
    category: "Industrial",
  },
  {
    id: 6,
    image: project6.src,
    title: "Desarrollo Residencial Vertical",
    description:
      "Consultoría y ejecución de instalaciones hidrosanitarias y eléctricas para edificio residencial de 15 niveles. Se implementaron sistemas de presión constante y calentamiento solar centralizado.",
    category: "Residencial",
  },
];

const services = [
  {
    title: "Instalaciones Eléctricas",
    description:
      "Diseño, ejecución y mantenimiento de sistemas eléctricos de media y baja tensión. Cumplimiento estricto de la NOM-001-SEDE.",
    icon: Zap,
  },
  {
    title: "Mantenimiento Industrial",
    description:
      "Programas preventivos y correctivos para maquinaria, tableros de control y subestaciones. Minimizamos tiempos de inactividad.",
    icon: Wrench,
  },
  {
    title: "Obra Civil e Institucional",
    description:
      "Construcción y remodelación de espacios corporativos, naves industriales y edificios públicos con acabados de alta calidad.",
    icon: Building2,
  },
  {
    title: "Sistemas de Drywall",
    description:
      "Instalación experta de muros divisorios, plafones y detalles arquitectónicos con sistemas ligeros y acústicos.",
    icon: Hammer,
  },
  {
    title: "Acabados y Pintura",
    description:
      "Aplicación de recubrimientos industriales, epóxicos y pintura vinílica para interiores y exteriores.",
    icon: Paintbrush,
  },
  {
    title: "Consultoría Energética",
    description:
      "Auditorías de calidad de energía, corrección de factor de potencia y estudios de ahorro energético.",
    icon: Lightbulb,
  },
];
---

<Layout title="Servicios - Instalaciones García's">
  <!-- Hero Section -->
  <section class="relative py-32 bg-primary overflow-hidden">
    <div
      class="absolute inset-0 bg-gradient-to-b from-black/80 via-black/70 to-primary z-10"
    >
    </div>
    <div
      class="absolute inset-0 bg-cover bg-center opacity-30"
      style={`background-image: url('${heroBg.src}');`}
    >
    </div>

    <div class="container mx-auto px-6 relative z-20 text-center">
      <h1
        class="text-4xl md:text-6xl font-bold text-white mb-6 animate-mask-reveal"
      >
        Nuestras Soluciones
      </h1>
      <p
        class="text-xl text-text-muted max-w-2xl mx-auto animate-mask-reveal-delay"
      >
        Ingeniería y construcción con los más altos estándares de calidad y
        seguridad para su empresa.
      </p>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-24 bg-primary relative">
    <div class="container mx-auto px-6">
      <div
        id="spotlight-container"
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 spotlight-group"
        style="--mouse-x: 0px; --mouse-y: 0px;"
      >
        {
          services.map((service) => (
            <ServiceCard
              title={service.title}
              description={service.description}
              Icon={service.icon}
            />
          ))
        }
      </div>
    </div>
  </section>

  <!-- Project Gallery Carousel -->
  <ProjectGallery client:visible projects={projects} />

  <!-- Interactive Project Calculator -->
  <ProjectCalculator client:visible />

  <!-- Why Choose Us - Mini Section -->
  <section class="py-20 bg-secondary border-y border-white/5">
    <div class="container mx-auto px-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div class="text-center md:text-left">
          <h2 class="text-3xl font-bold text-white mb-6">
            Garantía de Excelencia
          </h2>
          <p class="text-text-muted mb-8 leading-relaxed">
            Cada proyecto es supervisado por ingenieros certificados y ejecutado
            por personal técnico altamente capacitado. Nos comprometemos con los
            tiempos de entrega y la transparencia presupuestal.
          </p>
          <ul class="space-y-4">
            <li
              class="flex items-center gap-3 text-gray-300 justify-center md:justify-start"
            >
              <CheckCircle2 className="w-5 h-5 text-white" />
              <span>Certificación NOM-001-SEDE</span>
            </li>
            <li
              class="flex items-center gap-3 text-gray-300 justify-center md:justify-start"
            >
              <CheckCircle2 className="w-5 h-5 text-white" />
              <span>Personal asegurado (IMSS/REPSE)</span>
            </li>
            <li
              class="flex items-center gap-3 text-gray-300 justify-center md:justify-start"
            >
              <CheckCircle2 className="w-5 h-5 text-white" />
              <span>Garantía por escrito en cada obra</span>
            </li>
          </ul>
        </div>
        <div class="relative h-[400px] rounded-2xl overflow-hidden group">
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent z-10"
          >
          </div>
          <img
            src={whyUsImage.src}
            alt="Ingenieros trabajando"
            loading="lazy"
            class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
          />
          <div class="absolute bottom-8 left-8 z-20">
            <div class="flex items-center gap-2 mb-2">
              <Shield className="w-6 h-6 text-white" />
              <span
                class="text-white font-bold uppercase tracking-wider text-sm"
                >Seguridad Primero</span
              >
            </div>
            <p class="text-gray-300 text-sm">
              Protocolos estrictos de seguridad industrial.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-primary text-center">
    <div class="container mx-auto px-6">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-8">
        ¿Tiene un proyecto en mente?
      </h2>
      <a
        href="/contacto"
        class="inline-block px-10 py-4 bg-white text-black font-bold rounded-full hover:bg-gray-200 transition-all duration-300 transform hover:scale-105 shadow-lg"
      >
        Solicitar Cotización
      </a>
    </div>
  </section>
</Layout>
