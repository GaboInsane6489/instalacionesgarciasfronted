---
import Layout from "../layouts/Layout.astro";
import { Mail, Phone, MapPin, Clock, Send, MessageSquare } from "lucide-react";

// Assets
import heroBg from "../assets/images/ConstructionManager.webp";
---

<Layout title="Contacto - Instalaciones García's">
  <!-- Hero Section with Parallax -->
  <section class="relative h-[50vh] min-h-[400px] overflow-hidden flex items-center justify-center">
    <div class="absolute inset-0 z-0">
      <div class="absolute inset-0 bg-black/70 z-10"></div>
      <img
        src={heroBg.src}
        alt="Contacto"
        class="w-full h-full object-cover"
      />
    </div>

    <div class="container mx-auto px-6 relative z-20 text-center">
      <span class="inline-block py-1 px-3 rounded-full bg-white/10 border border-white/20 text-xs font-bold tracking-wider text-white mb-4 backdrop-blur-md">
        ESTAMOS PARA SERVIRLE
      </span>
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 tracking-tight">
        Hablemos de su Proyecto
      </h1>
      <p class="text-lg text-gray-300 max-w-2xl mx-auto font-light leading-relaxed">
        Nuestro equipo de ingenieros está listo para brindarle la asesoría técnica especializada que su empresa necesita.
      </p>
    </div>
  </section>

  <!-- Main Content Grid -->
  <section class="py-20 bg-primary relative overflow-hidden">
    <!-- Video Background -->
    <div class="absolute inset-0 z-0">
      <video
        class="w-full h-full object-cover opacity-30"
        autoplay
        muted
        loop
        playsinline
      >
        <source src="https://cdn.pixabay.com/video/2022/06/10/119930-719283371_large.mp4" type="video/mp4" />
      </video>
      <div class="absolute inset-0 bg-gradient-to-b from-primary/40 via-primary/30 to-primary/40"></div>
    </div>

    <div class="container mx-auto px-6 relative z-10">
      
      <!-- Contact Info Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-20">
        <!-- Location -->
        <div class="bg-secondary/50 backdrop-blur-sm border border-white/10 rounded-2xl p-6 hover:border-white/30 transition-all duration-300 hover:shadow-[0_0_20px_rgba(255,255,255,0.15)] group">
          <div class="w-12 h-12 rounded-xl bg-white/5 flex items-center justify-center mb-4 group-hover:bg-blue-500/20 transition-colors">
            <MapPin className="w-6 h-6 text-white group-hover:text-blue-400 transition-colors" />
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Oficinas</h3>
          <p class="text-gray-400 text-sm leading-relaxed">
            Av. Tecnológico 2405, Piso 8<br />
            Torre Empresarial, CDMX
          </p>
        </div>

        <!-- Phone -->
        <div class="bg-secondary/50 backdrop-blur-sm border border-white/10 rounded-2xl p-6 hover:border-white/30 transition-all duration-300 hover:shadow-[0_0_20px_rgba(255,255,255,0.15)] group">
          <div class="w-12 h-12 rounded-xl bg-white/5 flex items-center justify-center mb-4 group-hover:bg-purple-500/20 transition-colors">
            <Phone className="w-6 h-6 text-white group-hover:text-purple-400 transition-colors" />
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Teléfonos</h3>
          <p class="text-gray-400 text-sm leading-relaxed">
            +52 (55) 8900-1234<br />
            +52 (55) 8900-5678
          </p>
        </div>

        <!-- Email -->
        <div class="bg-secondary/50 backdrop-blur-sm border border-white/10 rounded-2xl p-6 hover:border-white/30 transition-all duration-300 hover:shadow-[0_0_20px_rgba(255,255,255,0.15)] group">
          <div class="w-12 h-12 rounded-xl bg-white/5 flex items-center justify-center mb-4 group-hover:bg-pink-500/20 transition-colors">
            <Mail className="w-6 h-6 text-white group-hover:text-pink-400 transition-colors" />
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Email</h3>
          <p class="text-gray-400 text-sm leading-relaxed">
            proyectos@igarcias.com<br />
            ventas@igarcias.com
          </p>
        </div>

        <!-- Hours -->
        <div class="bg-secondary/50 backdrop-blur-sm border border-white/10 rounded-2xl p-6 hover:border-white/30 transition-all duration-300 hover:shadow-[0_0_20px_rgba(255,255,255,0.15)] group">
          <div class="w-12 h-12 rounded-xl bg-white/5 flex items-center justify-center mb-4 group-hover:bg-green-500/20 transition-colors">
            <Clock className="w-6 h-6 text-white group-hover:text-green-400 transition-colors" />
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Horario</h3>
          <p class="text-gray-400 text-sm leading-relaxed">
            Lun - Vie: 8:00 - 18:00<br />
            Sáb: 9:00 - 13:00
          </p>
        </div>
      </div>

      <!-- Contact Form Section -->
      <div class="max-w-4xl mx-auto mb-24">
        <div class="bg-secondary/50 backdrop-blur-sm border border-white/10 rounded-3xl p-8 md:p-12 shadow-[0_0_30px_rgba(255,255,255,0.05)] relative overflow-hidden">
          <!-- Decorative gradient -->
          <div class="absolute top-0 right-0 w-96 h-96 bg-blue-500/10 rounded-full blur-[100px] -translate-y-1/2 translate-x-1/2 pointer-events-none"></div>
          <div class="absolute bottom-0 left-0 w-96 h-96 bg-purple-500/10 rounded-full blur-[100px] translate-y-1/2 -translate-x-1/2 pointer-events-none"></div>
          
          <div class="text-center mb-12 relative z-10">
            <h2 class="text-3xl font-bold text-white mb-4">Envíenos un Mensaje</h2>
            <p class="text-gray-400">Complete el formulario y un especialista se pondrá en contacto con usted a la brevedad.</p>
          </div>

          <form id="contactForm" class="space-y-6 relative z-10">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-2">
                <label class="text-xs font-bold text-gray-400 uppercase tracking-wider">Nombre Completo</label>
                <input
                  type="text"
                  name="nombre"
                  required
                  class="w-full bg-primary/50 border border-white/10 rounded-xl px-4 py-3 text-white text-sm focus:outline-none focus:border-white/30 focus:bg-primary/80 transition-all placeholder:text-white/20 focus:shadow-[0_0_15px_rgba(255,255,255,0.1)]"
                  placeholder="Ej. Juan Pérez"
                />
              </div>
              <div class="space-y-2">
                <label class="text-xs font-bold text-gray-400 uppercase tracking-wider">Empresa</label>
                <input
                  type="text"
                  name="empresa"
                  class="w-full bg-primary/50 border border-white/10 rounded-xl px-4 py-3 text-white text-sm focus:outline-none focus:border-white/30 focus:bg-primary/80 transition-all placeholder:text-white/20 focus:shadow-[0_0_15px_rgba(255,255,255,0.1)]"
                  placeholder="Ej. Constructora XYZ"
                />
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-2">
                <label class="text-xs font-bold text-gray-400 uppercase tracking-wider">Correo Electrónico</label>
                <input
                  type="email"
                  name="email"
                  required
                  class="w-full bg-primary/50 border border-white/10 rounded-xl px-4 py-3 text-white text-sm focus:outline-none focus:border-white/30 focus:bg-primary/80 transition-all placeholder:text-white/20 focus:shadow-[0_0_15px_rgba(255,255,255,0.1)]"
                  placeholder="ejemplo@empresa.com"
                />
              </div>
              <div class="space-y-2">
                <label class="text-xs font-bold text-gray-400 uppercase tracking-wider">Teléfono</label>
                <input
                  type="tel"
                  name="telefono"
                  class="w-full bg-primary/50 border border-white/10 rounded-xl px-4 py-3 text-white text-sm focus:outline-none focus:border-white/30 focus:bg-primary/80 transition-all placeholder:text-white/20 focus:shadow-[0_0_15px_rgba(255,255,255,0.1)]"
                  placeholder="+52 (55) 0000 0000"
                />
              </div>
            </div>

            <div class="space-y-2">
              <label class="text-xs font-bold text-gray-400 uppercase tracking-wider">Detalles del Proyecto</label>
              <textarea
                name="mensaje"
                rows="5"
                required
                class="w-full bg-primary/50 border border-white/10 rounded-xl px-4 py-3 text-white text-sm focus:outline-none focus:border-white/30 focus:bg-primary/80 transition-all placeholder:text-white/20 resize-none focus:shadow-[0_0_15px_rgba(255,255,255,0.1)]"
                placeholder="Describa brevemente sus necesidades, ubicación y tiempos estimados..."></textarea>
            </div>

            <button
              type="submit"
              id="submitBtn"
              class="w-full bg-white text-black font-bold py-4 rounded-xl hover:bg-gray-200 transition-all transform hover:scale-[1.01] flex items-center justify-center gap-2 disabled:opacity-50 disabled:cursor-not-allowed shadow-[0_0_20px_rgba(255,255,255,0.3)] mt-8"
            >
              <span>Enviar Solicitud</span> <Send size={16} />
            </button>
          </form>
        </div>
      </div>

      <!-- Large Map Section -->
      <div class="max-w-6xl mx-auto">
        <div class="rounded-3xl overflow-hidden border border-white/10 h-[500px] w-full relative group shadow-[0_0_30px_rgba(255,255,255,0.1)]">
          <div class="absolute inset-0 bg-secondary animate-pulse z-0"></div>
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d251185.4965825359!2d-67.03045484837482!3d10.468361803097245!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8c2a58adcd82486f%3A0x93dd2eae0a998483!2sCaracas%2C%20Distrito%20Capital%2C%20Venezuela!5e0!3m2!1ses!2s!4v1700000000000!5m2!1ses!2s" 
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            class="relative z-10 grayscale hover:grayscale-0 transition-all duration-700 opacity-80 hover:opacity-100"
          ></iframe>
        </div>
      </div>

    </div>
  </section>
</Layout>

<script>
  import apiClient from "../lib/apiClient";

  document.addEventListener('astro:page-load', () => {
    const form = document.getElementById('contactForm') as HTMLFormElement;
    const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement;
    const btnText = submitBtn?.querySelector('span');

    if (form && submitBtn && btnText) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        // Disable button
        submitBtn.disabled = true;
        const originalText = btnText.innerText;
        btnText.innerText = 'Enviando...';

        const formData = new FormData(form);
        const data = {
          nombre: formData.get('nombre'),
          email: formData.get('email'),
          telefono: formData.get('telefono'),
          mensaje: `Empresa: ${formData.get('empresa')}\n\n${formData.get('mensaje')}`,
          tipo_servicio: 'Contacto General',
          urgencia: 'Normal',
          m2: 0
        };

        try {
          const response = await apiClient.post('/leads', data);

          if (response.status !== 201 && response.status !== 200) {
            throw new Error('Error en la respuesta del servidor');
          }

          alert('✅ Mensaje enviado correctamente. Nos pondremos en contacto pronto.');
          form.reset();
        } catch (error) {
          console.error('Error sending lead:', error);
          alert('❌ Error al enviar el mensaje. Por favor intente nuevamente.');
        } finally {
          submitBtn.disabled = false;
          btnText.innerText = originalText;
        }
      });
    }
  });
</script>
