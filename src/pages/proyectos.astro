---
import Layout from "../layouts/Layout.astro";
import VideoHero from "../components/VideoHero.astro";
import { ArrowRight, MapPin, Calendar, CheckCircle2 } from "lucide-react";

// Assets
import img1 from "../assets/images/NiceConstruction.jpg";
import img2 from "../assets/images/Construction8.jpg";
import img3 from "../assets/images/Construction9.jpg";
import img4 from "../assets/images/Construction10.jpg";
import img5 from "../assets/images/Construction11.jpg";
import img6 from "../assets/images/Workers4.jpg";

const projects = [
  {
    title: "Centro Comercial Andares",
    location: "Guadalajara, JAL",
    date: "2024",
    image: img1,
    category: "Comercial",
  },
  {
    title: "Planta Automotriz",
    location: "Silao, GTO",
    date: "2023",
    image: img2,
    category: "Industrial",
  },
  {
    title: "Hospital Regional",
    location: "Monterrey, NL",
    date: "2023",
    image: img3,
    category: "Salud",
  },
  {
    title: "Torre Residencial",
    location: "CDMX",
    date: "2022",
    image: img4,
    category: "Residencial",
  },
  {
    title: "Parque Eólico",
    location: "Oaxaca",
    date: "2022",
    image: img5,
    category: "Energía",
  },
  {
    title: "Carretera Federal",
    location: "Veracruz",
    date: "2021",
    image: img6,
    category: "Infraestructura",
  },
];
---

<Layout title="Proyectos - Instalaciones García's">
  <!-- Hero Section -->
  <VideoHero
    videoUrl="https://cdn.pixabay.com/video/2024/07/02/219134_large.mp4"
    mobileImage={img1.src}
    title="Nuestra Huella"
    subtitle="Construyendo el futuro con ingeniería de precisión y pasión por la excelencia."
  />

  <!-- Featured Section 1: Infraestructura -->
  <section class="relative py-32 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <video
        class="w-full h-full object-cover"
        autoplay
        muted
        loop
        playsinline
        preload="metadata"
      >
        <source
          src="https://cdn.pixabay.com/video/2020/06/08/41501-429661287_large.mp4"
          type="video/mp4"
        />
      </video>
      <div class="absolute inset-0 bg-black/70"></div>
    </div>

    <div class="container mx-auto px-6 relative z-10">
      <div class="max-w-4xl">
        <span
          class="text-primary-400 font-bold tracking-widest uppercase mb-4 block"
        >
          Sector Industrial
        </span>
        <h2
          class="text-4xl md:text-6xl font-bold text-white mb-8 leading-tight"
        >
          Infraestructura Crítica para el Desarrollo
        </h2>
        <p class="text-xl text-gray-300 mb-12 leading-relaxed">
          Especialistas en obras de gran envergadura donde la precisión no es
          opcional. Desde cimentaciones profundas hasta estructuras de acero
          complejas.
        </p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div
            class="bg-white/10 backdrop-blur-md p-6 rounded-xl border border-white/10"
          >
            <h3 class="text-2xl font-bold text-white mb-2">50+</h3>
            <p class="text-sm text-gray-400">Naves Industriales</p>
          </div>
          <div
            class="bg-white/10 backdrop-blur-md p-6 rounded-xl border border-white/10"
          >
            <h3 class="text-2xl font-bold text-white mb-2">2M+</h3>
            <p class="text-sm text-gray-400">m² Construidos</p>
          </div>
          <div
            class="bg-white/10 backdrop-blur-md p-6 rounded-xl border border-white/10"
          >
            <h3 class="text-2xl font-bold text-white mb-2">0</h3>
            <p class="text-sm text-gray-400">Accidentes Graves</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Project Grid 1 -->
  <section class="py-24 bg-primary">
    <div class="container mx-auto px-6">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          projects.slice(0, 3).map((project) => (
            <div class="group relative overflow-hidden rounded-2xl aspect-[4/5]">
              <img
                src={project.image.src}
                alt={project.title}
                loading="lazy"
                class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent opacity-80 transition-opacity duration-300" />

              <div class="absolute bottom-0 left-0 p-8 w-full transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
                <span class="inline-block px-3 py-1 mb-3 text-xs font-bold tracking-wider text-black bg-white rounded-full uppercase">
                  {project.category}
                </span>
                <h3 class="text-2xl font-bold text-white mb-2">
                  {project.title}
                </h3>
                <div class="flex items-center gap-4 text-gray-300 text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300 delay-100">
                  <span class="flex items-center gap-1">
                    <MapPin size={14} /> {project.location}
                  </span>
                  <span class="flex items-center gap-1">
                    <Calendar size={14} /> {project.date}
                  </span>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Featured Section 2: Energía -->
  <section class="relative py-32 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <video
        class="w-full h-full object-cover"
        autoplay
        muted
        loop
        playsinline
        preload="metadata"
      >
        <source
          src="https://cdn.pixabay.com/video/2017/07/23/10877-226635355_large.mp4"
          type="video/mp4"
        />
      </video>
      <div class="absolute inset-0 bg-black/70"></div>
    </div>

    <div class="container mx-auto px-6 relative z-10 text-right">
      <div class="max-w-4xl ml-auto">
        <span
          class="text-primary-400 font-bold tracking-widest uppercase mb-4 block"
        >
          Sustentabilidad
        </span>
        <h2
          class="text-4xl md:text-6xl font-bold text-white mb-8 leading-tight"
        >
          Energía para el Futuro
        </h2>
        <p class="text-xl text-gray-300 mb-12 leading-relaxed">
          Lideramos la transición energética con proyectos de infraestructura
          eléctrica renovable y sistemas de alta eficiencia.
        </p>
        <div class="flex justify-end gap-4">
          <a
            href="/contacto"
            class="inline-flex items-center gap-2 px-8 py-4 bg-white text-black font-bold rounded-full hover:bg-gray-200 transition-all"
          >
            Iniciar Proyecto <ArrowRight size={20} />
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Project Grid 2 -->
  <section class="py-24 bg-primary">
    <div class="container mx-auto px-6">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          projects.slice(3, 6).map((project) => (
            <div class="group relative overflow-hidden rounded-2xl aspect-[4/5]">
              <img
                src={project.image.src}
                alt={project.title}
                loading="lazy"
                class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent opacity-80 transition-opacity duration-300" />

              <div class="absolute bottom-0 left-0 p-8 w-full transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
                <span class="inline-block px-3 py-1 mb-3 text-xs font-bold tracking-wider text-black bg-white rounded-full uppercase">
                  {project.category}
                </span>
                <h3 class="text-2xl font-bold text-white mb-2">
                  {project.title}
                </h3>
                <div class="flex items-center gap-4 text-gray-300 text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300 delay-100">
                  <span class="flex items-center gap-1">
                    <MapPin size={14} /> {project.location}
                  </span>
                  <span class="flex items-center gap-1">
                    <Calendar size={14} /> {project.date}
                  </span>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Featured Section 3: Urbanismo -->
  <section class="relative py-32 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <video
        class="w-full h-full object-cover"
        autoplay
        muted
        loop
        playsinline
        preload="metadata"
      >
        <source
          src="https://cdn.pixabay.com/video/2020/06/01/40813-426920959_large.mp4"
          type="video/mp4"
        />
      </video>
      <div class="absolute inset-0 bg-black/70"></div>
    </div>

    <div class="container mx-auto px-6 relative z-10 text-center">
      <div class="max-w-4xl mx-auto">
        <h2
          class="text-4xl md:text-6xl font-bold text-white mb-8 leading-tight"
        >
          Transformando el Paisaje Urbano
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 text-left mt-12">
          <div
            class="bg-black/40 backdrop-blur-md p-8 rounded-2xl border border-white/10"
          >
            <CheckCircle2 className="text-white w-8 h-8 mb-4" />
            <h3 class="text-xl font-bold text-white mb-2">Planeación Urbana</h3>
            <p class="text-gray-400">
              Integración armónica de infraestructura en entornos densamente
              poblados.
            </p>
          </div>
          <div
            class="bg-black/40 backdrop-blur-md p-8 rounded-2xl border border-white/10"
          >
            <CheckCircle2 className="text-white w-8 h-8 mb-4" />
            <h3 class="text-xl font-bold text-white mb-2">
              Movilidad Inteligente
            </h3>
            <p class="text-gray-400">
              Soluciones viales y de transporte optimizadas para el flujo
              moderno.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
